                <option value="pdf">PDF</option>
                <option value="excel">EXCEL</option>
            </select>
            <button class="btn btn-primary">Rapor Al</button>
@*<input type="button" name="btnRapor" value="Rapor Al" class="btn btn-primary" />*@
        }
