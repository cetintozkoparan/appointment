@model SG_DAL.Entities.School
@{
    ViewBag.Title = "School";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="modal-header">
        <h3>Okul Kaydı</h3>
    </div>
    <div class="modal-body">
        <div class="well">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#create" data-toggle="tab">Okul Kaydet</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane active" id="create">
                   
                    @using (Html.BeginForm("Create", "School", FormMethod.Post, new { id = "registerform", @class = "pageform" }))
                    {
                        @Html.ValidationSummary(true)
                        <label>Ad</label>
                        @Html.TextBoxFor(m => m.Ad, null, new { @class = "required input-xxlarge" })
                        @Html.ValidationMessageFor(m => m.Ad)

                        <label>MEB Kodu</label>
                        @Html.TextBoxFor(m => m.MebKodu, null, new { @class = "required" })
                        @Html.ValidationMessageFor(m => m.MebKodu)

                        <div>
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>