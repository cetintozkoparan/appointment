@model SinavGorevlendirme.Models.SinavListeWrapperModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (HttpContext.Current.User.Identity.IsAuthenticated)
{
    if (((FormsIdentity)User.Identity).Ticket.UserData == "ogretmen")
    {    
    <div class="alert alert-info">
        <a class="close" data-dismiss="alert">×</a>
        @using (Html.BeginForm("BasvuruDurumGuncelle", "Home", FormMethod.Post, new { id = "registerform", @class = "pageform form-horizontal" }))
        {
            <input type="checkbox" name="gnlBasvuru" @ViewBag.isaretli style="margin: 0" class="checkbox" />
            if (DateTime.Now.Month > 6)
            {
            <span style="line-height: 40px; margin-left: 10px">@string.Format("{0} - {1} Eğitim öğretim yılında yapılacak sınavlarda görev almak istiyorum.", DateTime.Now.Year, DateTime.Now.Year + 1)</span>
            }
            else
            {
            <span style="line-height: 40px; margin-left: 10px">@string.Format("{0} - {1} Eğitim öğretim yılında yapılacak sınavlarda görev almak istiyorum.", DateTime.Now.Year - 1, DateTime.Now.Year)</span>
            }

            <input type="submit" class="btn btn-primary" style="margin-left: 10px;" value="Kaydet" />
        }
    </div>
}

}
    @if (Model.sinavoturum.Count() == 0)
{
        <div class="alert alert-warning">
            <a class="close" data-dismiss="alert">×</a>
            Şuan onaylanmış bir sınav bulunmamaktadır.
        </div>

}
else
{
    
        <ul id="myTab" class="nav nav-tabs">
            <li><a href="#home" data-toggle="tab">ONAYA AÇILMIŞ SINAVLAR</a></li>
            @*<li><a href="#profile" data-toggle="tab">ONAYA AÇILMAMIŞ SINAVLAR</a></li>*@
        </ul>
    
        <table class="table table-striped table-hover table-bordered tablesorter-bootstrap">
            <thead>
                <tr>
                    <th style="padding: 12px">SINAV ADI</th>
                    <th style="padding: 12px">OTURUM</th>
                    <th style="padding: 12px">SINAV TARİHİ</th>
                    <th style="padding: 12px">SINAV SAATİ</th>
                    <th style="padding: 12px">OTURUM GÜNÜ</th>
                    <th style="padding: 12px"></th>
                </tr>
            </thead>
            <tbody>
                @{
    System.Globalization.CultureInfo trk = new System.Globalization.CultureInfo("tr-TR");
                }
                @foreach (var item in Model.sinavoturum)
            {
                    <tr>
                        <td>@item.Sinav.SinavAdi
                        </td>
                        <td style="text-align: center">
                            @(item.OturumNo + ". Oturum")
                        </td>
                        <td style="text-align: center">@Convert.ToDateTime(item.Tarih).ToShortDateString()
                        </td>
                        <td style="text-align: center">@item.Saat</td>
                        <td style="text-align: center">
                            @trk.DateTimeFormat.DayNames[(int)(Convert.ToDateTime(item.Tarih).DayOfWeek)]
                        </td>
                        <td style="text-align: center">
                            <span class="label label-success">BAŞVUR </span>
                            @*<a href="/yonetim/sinavgorevlendirme/@item.SinavOturumId">Düzenle</a>*@
                        </td>
                    </tr>    
            }

