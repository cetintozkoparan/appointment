@model SG_DAL.Entities.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Adminus &#9679; Page</title>
    <link href="~/Content/adminstyle.css" rel="stylesheet" />
</head>
<body>
    <div id="hld">
        <div class="wrapper">
            <!-- wrapper begins -->
            <div class="block small center login">
                <div class="block_head">
                    <div class="bheadl"></div>
                    <div class="bheadr"></div>

                    <h2>Sınav Görevlendirme Sistemi</h2>
                    <ul>
                        <li><a href="/">Anasayfa</a></li>
                    </ul>
                </div>
                <!-- .block_head ends -->

                <div class="block_content">
                    @if(ViewBag.HataliGiris != null)
                    {
                        <div class="message errormsg">
                            <p>Hata: @ViewBag.HataliGiris</p>
                        </div>
                    }else{
                        <div class="message info">
                            <p>Bilgi: Sınav Görevlendirme Sistemi Yönetici Girişi.</p>
                        </div>
                    }
                    @using (Html.BeginForm("Login", "Admin"))
                    {
                        <p>
                            <label>TC Kimlik No:</label>
                            <br />
                            @Html.TextBoxFor(m => m.TCKimlik, new { title = "TC Kimlik numaranızı giriniz.", @class="text", @maxlength="11" })
                        </p>

                        <p>
                            <label>Şifre:</label>
                            <br />
                            @Html.TextBoxFor(m => m.Sifre, new { title = "Şifrenizi giriniz.", @class="text", @value="12345678", @type="password"})
                        </p>

                        <p>
                            <input type="submit" class="submit" value="Giriş" />
                        </p>
                    }

                </div>
                <!-- .block_content ends -->

                <div class="bendl"></div>
                <div class="bendr"></div>
            </div>
            <!-- .login ends -->
        </div>
        <!-- wrapper ends -->
    </div>
    <!-- #hld ends -->
</body>
</html>
